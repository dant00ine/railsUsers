<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Users Index</title>
	
</head>
<body>
<div class="container">
	<div class="col-md-8">
		<% if flash[:success] %>
			<p style="color:green"><%=flash[:success]%></p>
		<% end %>
		<table class="table table-striped">
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
		
		<% @users.each do |u| %>
			<tr>
				<td><%=u.first_name%></td>
				<td><%=u.last_name%></td>
				<td><%=u.email%></td>
				<td>
					<a href="/users/<%=u.id%>">Show</a>
					<a href="/users/<%=u.id%>/edit">Edit</a>
					<form action="/users/<%=u.id%>" method="post">
						<input type="hidden" name="authenticity_token" value="<%=@form_authenticity_token%>">
						<input type="hidden" name="_method" value="delete">
						<input type="submit" value="Destroy" style="background: none; border: none; color: light-blue; cursor:pointer">
					</form>
				</td>
			</tr>
		<% end %>
		</table>
	<a href="/users/new">New User</a>
	</div>
</div>
</body>
</html>